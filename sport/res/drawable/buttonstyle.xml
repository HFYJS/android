<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
<!-- 橘黄背景浅灰边框（加入购物车） -->
    <!-- 边框颜色 -->
    <item>
        <shape>
            <solid android:color="#FD9201" />
        </shape>
    </item>
    <!-- 主题背景颜色值 -->
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape>
            <solid android:color="#FD9201" />

            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp" />
        </shape>
    </item>

</layer-list>