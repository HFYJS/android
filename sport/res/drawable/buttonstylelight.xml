<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 透明背景，浅灰边框 -->
    <!-- 边框颜色 -->
    <item>
        <shape>
            <solid android:color="@drawable/xlight" />
        </shape>
    </item>
    <!-- 主题背景颜色值 -->
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="0dp"
        android:top="1dp">
        <shape>
            <solid android:color="#ffffff" />

            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp" />
        </shape>
    </item>

</layer-list>