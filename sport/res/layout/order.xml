<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tv_order_address"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tv_order_receive"
            android:layout_marginLeft="29dp"
            android:layout_marginTop="18dp"
            android:text="收货地址：江苏省苏州市园区独墅湖林泉路文汇人才公寓" />

        <TextView
            android:id="@+id/tv_order_receive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_order_address"
            android:layout_alignParentTop="true"
            android:text="收货人：张三" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignTop="@+id/tv_order_address"
            android:layout_marginRight="14dp"
            android:layout_toLeftOf="@+id/tv_order_receive"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/tv_order_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_order_address"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:text="15705212000" />
    </RelativeLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="wrap_content"
        android:layout_height="15dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/iv_order_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="28dp"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/tv_order_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_order_img"
            android:layout_marginTop="16dp"
            android:layout_toRightOf="@+id/iv_order_img"
            android:text="亚瑟士男鞋" />

        <TextView
            android:id="@+id/tv_order_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_order_img"
            android:layout_alignLeft="@+id/tv_order_name"
            android:text="376.2" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_order_price"
            android:layout_alignBottom="@+id/tv_order_price"
            android:layout_alignParentRight="true"
            android:layout_marginRight="21dp"
            android:text="x1" />

        <TextView
            android:id="@+id/tv_order_count1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/iv_order_img"
            android:layout_marginTop="22dp"
            android:text="购买数量" />

        <TextView
            android:id="@+id/tv_order_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="买家留言" />

        <TextView
            android:id="@+id/tv_order_message_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_order_message"
            android:layout_alignBottom="@+id/tv_order_message"
            android:layout_toRightOf="@+id/iv_order_img"
            android:text="选填，可填写要求" />

        <TextView
            android:id="@+id/tv_order_count2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_order_message_content"
            android:layout_marginTop="25dp"
            android:layout_toLeftOf="@+id/textView6"
            android:text="共1件商品" />

        <TextView
            android:id="@+id/tv_order_totalprice1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_order_count2"
            android:layout_alignParentRight="true"
            android:text="合计：376.2" />

        <Button
            android:id="@+id/btn_order_ensure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="确认付款" />

        <TextView
            android:id="@+id/tv_order_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btn_order_ensure"
            android:layout_alignBottom="@+id/btn_order_ensure"
            android:layout_marginRight="53dp"
            android:layout_toLeftOf="@+id/button1"
            android:text="合计:" />

        <TextView
            android:id="@+id/tv_order_totalprice2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_order_total"
            android:layout_alignBottom="@+id/tv_order_total"
            android:layout_toLeftOf="@+id/btn_order_ensure"
            android:text="376.2" />
    </RelativeLayout>

</LinearLayout>