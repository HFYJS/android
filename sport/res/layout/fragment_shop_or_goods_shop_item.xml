<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/iv_shop_or_goods_shopitem"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerVertical="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/tv_shop_or_goods_shopitem_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_shop_or_goods_shopitem"
        android:layout_toRightOf="@id/iv_shop_or_goods_shopitem"
        android:text="Nike官方旗舰店"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tv_shop_or_goods_shopitem_amount"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_shop_or_goods_shopitem"
        android:layout_toRightOf="@id/iv_shop_or_goods_shopitem"
        android:gravity="left"
        android:text="商品数"
        android:textColor="@drawable/light"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/tv_shop_or_goods_shopitem_popularity"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_shop_or_goods_shopitem"
        android:layout_above="@id/tv_shop_or_goods_shopitem_amount"
        android:gravity="left"
        android:text="人气"
        android:textColor="@drawable/light"
        android:textSize="12dp" />

</RelativeLayout>