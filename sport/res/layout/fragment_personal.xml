<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp" >

        <Button
            android:id="@+id/btn_fragment_personal_showInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:background="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/tv_fragment_personal_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btn_fragment_personal_showInfo"
            android:layout_alignBottom="@+id/btn_fragment_personal_showInfo"
            android:layout_toRightOf="@+id/btn_fragment_personal_showInfo"
            android:text="HFY" />

        <Button
            android:id="@+id/btn_fragment_personal_logoff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="32dp"
            android:background="@null"
            android:text="注销" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5px"
        android:background="@drawable/lightblack" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:text="关注" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView1"
            android:layout_alignBottom="@+id/textView1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="粉丝" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView2"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            android:layout_marginTop="10dp"
            android:text="帖子" />

        <Button
            android:id="@+id/btn_fragment_personal_fans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@null"
            android:gravity="center"
            android:text="200" />

        <Button
            android:id="@+id/btn_fragment_personal_foucs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:background="@null"
            android:gravity="center"
            android:text="12" />

        <Button
            android:id="@+id/btn_fragment_personal_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:background="@null"
            android:gravity="center"
            android:text="5" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="30px"
        android:background="@drawable/lightblack" />

    <RelativeLayout
        android:id="@+id/rl_fragment_personal_allorder"
        android:layout_width="match_parent"
        android:layout_height="25dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="21dp"
            android:text="全部订单" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/textView4"
            android:src="@drawable/next" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
          android:orientation="horizontal" 
         >

        <Button
            android:id="@+id/btn_fragment_personal_pay"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:background="@null"
            android:gravity="center"
            android:text="待付款" 
             android:layout_weight="1"/>

	  	<Button
            android:id="@+id/btn_fragment_personal_sendgoods"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
              android:background="@null"
            android:gravity="center"
            android:text="待发货" 
             android:layout_weight="1"/>
   		<Button
            android:id="@+id/btn_fragment_personal_takegoods"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="center"
            android:text="待收货"
             android:layout_weight="1" />
        <Button
            android:id="@+id/btn_fragment_personal_comment"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="center"
            android:text="待评论" 
            android:layout_weight="1"/>
      
    </LinearLayout>
	
    <View
        android:layout_width="match_parent"
        android:layout_height="30px"
        android:background="@drawable/lightblack" />

    <RelativeLayout
        android:id="@+id/rl_fragment_personal_myfavorites"
        android:layout_width="match_parent"
        android:layout_height="55dp" >

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="21dp"
            android:text="我的收藏" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/next" />
        
    </RelativeLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="30px"
        android:background="@drawable/lightblack" />
    
    <RelativeLayout
        android:id="@+id/rl_fragment_personal_editInfo"
        android:layout_width="match_parent"
        android:layout_height="55dp" >

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="21dp"
            android:text="修改资料" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/next" />
        
    </RelativeLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="30px"
        android:background="@drawable/lightblack" />
    
        <RelativeLayout
        android:id="@+id/rl_fragment_personal_logistics"
        android:layout_width="match_parent"
        android:layout_height="55dp" >

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="21dp"
            android:text="物流动态" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/next" />
        
    </RelativeLayout>
    
        <View
        android:layout_width="match_parent"
        android:layout_height="30px"
        android:background="@drawable/lightblack" />
        
        <RelativeLayout
        android:id="@+id/rl_fragment_personal_nearby"
        android:layout_width="match_parent"
        android:layout_height="60dp" >

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="21dp"
            android:text="附近" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/next" />
        
    </RelativeLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="30px"
        android:background="@drawable/lightblack" />
</LinearLayout>