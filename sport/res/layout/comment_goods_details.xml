<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/iv_evaluate_goods_count_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/tv_evaluate_goods_count_name"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="28dp"
        android:layout_toLeftOf="@+id/tv_evaluate_goods_count_price"
        android:layout_toRightOf="@+id/iv_evaluate_goods_count_image"
        android:text="杞里香_宁夏枸杞子" />

    <TextView
        android:id="@+id/tv_evaluate_goods_count_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_evaluate_goods_count_name"
        android:layout_alignBottom="@+id/tv_evaluate_goods_count_name"
        android:layout_alignParentRight="true"
        android:layout_marginRight="17dp"
        android:text="￥39.80" />

    <TextView
        android:id="@+id/tv_evaluate_goods_count_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/tv_evaluate_goods_count_price"
        android:layout_below="@+id/tv_evaluate_goods_count_price"
        android:text="*1" />

</RelativeLayout>
