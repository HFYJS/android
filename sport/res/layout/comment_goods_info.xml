<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <TextView
            android:id="@+id/tv_evaluate_goods_info_goods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30dp"
            android:gravity="center"
            android:layout_toRightOf="@+id/iv_evaluate_goods_info_goods"
          
            android:text="商品名" />

        <ImageView
            android:id="@+id/iv_evaluate_goods_info_goods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="18dp"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/tv_evaluate_goods_info_goods_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="23dp"
            android:gravity="center"
            android:text="价格" />

        <TextView
            android:id="@+id/tv_evaluate_goods_info_goods_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_evaluate_goods_info_goods"
            android:layout_alignLeft="@+id/tv_evaluate_goods_info_goods"
            android:text="10" />

</RelativeLayout>
